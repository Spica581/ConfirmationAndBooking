<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Foreway</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
</head>
<body>

<header class="header">
    <div class="header-inner">
        <a href="/" class="logo">✈ Foreway</a>
        <nav class="nav">
            <a href="/Flights"       class="nav-link">Flights</a>
            <a href="/FlightDetails" class="nav-link">Details</a>
            <a href="/Book/Step1"    class="nav-link">Book</a>
            <a href="/Manage"        class="nav-link">Manage</a>
            <a href="/Confirmation"  class="nav-link">Confirmation</a>
            <a href="/SignIn"        class="nav-btn-sm" aria-label="Sign In">Sign In</a>
        </nav>
    </div>
</header>

<main class="page-shell">
    @RenderBody()
</main>

<footer class="footer">
    <span>&copy; 2026 Foreway — Fly smarter, anywhere.</span>
</footer>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
